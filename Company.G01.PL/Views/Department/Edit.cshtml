@model DepartmentRepo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Page</h1>
<br />
<br />


<form asp-action="Edit">
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }

    <div class="form-group">
        <label asp-for="Code" calss="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" calss="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" calss="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <br />
    <input type="submit" value="Save" class="btn btn-warning" />
    <a asp-action="Index" class="btn btn-light">Back to List</a>

</form>

