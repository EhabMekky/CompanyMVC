@model IEnumerable<Department>

    @{
        ViewData["Title"] = "Index";
    }

<h1>All Departments</h1>
<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create Department</a>
<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Code)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <td><a class="btn btn-warning" asp-controller="Department" asp-action="Details" asp-route-id="@dept.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-controller="Department" asp-action="Edit" asp-route-id="@dept.Id">Edit</a></td>
                    <td><a  class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@dept.Id">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
     <div class="alert alert-warning">
        <p>No Records Found</p>
    </div>
    
}

