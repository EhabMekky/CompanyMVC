@model IEnumerable<Employee>

    @{
        ViewData["Title"] = "Index";
    }

<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Age)</th>
                <th>@Html.DisplayNameFor(m => m.Address)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(m => m.Salary)</th>
                <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                <th>@Html.DisplayNameFor(m => m.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(m => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(m => employee.Salary)</td>
                    <td>@Html.DisplayFor(m => employee.IsActive)</td>
                    <td>@employee.HiringDate</td>
                    <td><a class="btn btn-warning" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
     <div class="alert alert-warning">
        <p>No Records Found</p>
    </div>
    
}

